{
	/Modules {
		DataAccessImplsModule
		MappersModule
	}
	/Mappers {
		/Input {}
		/Output {}
	}
	/DataAccessImpls {}

	/ReadMinimalInputTest {
		/ValidRequestWithSuspiciousHeaderField {
			/RequestLine 	"GET /alibaba HTTP/1.0\r\nX-Evil: GET /gaga HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			1
				/Request {
					/REQUEST_METHOD		GET
					/REQUEST_URI		"/alibaba"
					/SERVER_PROTOCOL	"HTTP/1.0"
					/header {
						/X-EVIL "GET /gaga HTTP/1.0"
					}
				}
			}
		}
		/ValidRequestWithNonSuspiciousHeaderField {
			/RequestLine 	"GET /alibaba HTTP/1.0\r\nX-Evil: vGET\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			1
				/Request {
					/REQUEST_METHOD		GET
					/REQUEST_URI		"/alibaba"
					/SERVER_PROTOCOL	"HTTP/1.0"
					/header {
						/X-EVIL "vGET"
					}
				}
			}
		}
		/ExtendedHeaderField {
			/RequestLine 	"GET /alibaba HTTP/1.0\r\nX-Evil: vGET /gaga HTTP1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			1
				/Request {
					/REQUEST_METHOD		GET
					/REQUEST_URI		"/alibaba"
					/SERVER_PROTOCOL	"HTTP/1.0"
					/header {
						/X-EVIL "vGET /gaga HTTP1.0"
					}
				}
			}
		}
		/IllegalServerProtocolFormat {
			/RequestLine 	"GET %2F HTTP%2F1.0\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/REQUEST_METHOD		GET
					/REQUEST_URI "%2F"
					/header *
				}
			}
		}
		/InvalidRequestLineTermination {
			/RequestLine 	"GET /alibaba HTTP/1.0\nX-Evil: GET /gaga HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
							    /Component "HTTPRequestReader"
							    /ResponseCode 400
							    /ResponseMsg "Bad Request"
								/ErrorMessage "Invalid request line termination"
								/FaultyContent "GET /alibaba HTTP/1.0\n"
							}
						}
					}
				}
			}
		}
		/EmptyFirstLine {
			/RequestLine "\r\nBla: 123\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5121
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
								/ResponseCode 400
								/ErrorMessage "Empty request line"
								/FaultyContent ""
							}
						}
					}
				}
			}
		}
		/EmptyRequest {
			/RequestLine ""
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5121
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
								/ResponseCode 400
								/ErrorMessage "Empty request line"
								/FaultyContent ""
							}
						}
					}
				}
			}
		}
		/IncompleteOrSimpleHTTPRequest {
			/RequestLine "GET  HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/header *
				}
			}
		}
		/LineSizeExceededTest {
			/RequestLine "GET  HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		8
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
							    /Component "HTTPRequestReader"
							    /ResponseCode 413
							    /ResponseMsg "Request Entity Too Large"
							    /ErrorMessage "Line size exceeded; max: 8 actual: 9 => check setting of [LineSizeLimit]"
							    /FaultyContent "GET  HTTP"
							}
						}
					}
				}
			}
		}
		/URISizeLimitExceededTest {
			/RequestLine "GET /23456789 HTTP/1.0\r\n\r\n"
			/URISizeLimit		8
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/REQUEST_METHOD		GET
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
							    /Component "HTTPRequestReader"
							    /ResponseCode 414
							    /ResponseMsg "Request-URL Too Large"
							    /ErrorMessage "Request-URI too long; max: 8 actual: 9 => check setting of [URISizeLimit]"
							    /FaultyContent "GET /23456789 HTTP/1.0"
							}
						}
					}
				}
			}
		}
		/RequestSizeLimitExceededTest {
			/RequestLine "GET  HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	8
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
							    /Component "HTTPRequestReader"
							    /ResponseCode 413
							    /ResponseMsg "Request Entity Too Large"
							    /ErrorMessage "RequestSizeLimit exceeded; max: 8 actual: 15 => check setting of [RequestSizeLimit]"
							    /FaultyContent "GET  HTTP/1.0\x0D\n"
							}
						}
					}
				}
			}
		}
		/InvalidRequestMethodTest {
			/RequestLine "xxGET / HTTP/1.0\r\n\r\n"
			/URISizeLimit		271
			/LineSizeLimit		4096
			/RequestSizeLimit	5120
			/Expected {
				/Return			0
				/Request {
					/header *
				}
				/TmpStore {
					/HTTPRequestReader {
						/Error {
							{
							    /Component "HTTPRequestReader"
							    /ResponseCode 405
							    /ResponseMsg "Method Not Allowed"
							    /ErrorMessage "Method Not Allowed"
							    /FaultyContent "xxGET / HTTP/1.0"
							}
						}
					}
				}
			}
		}
	}
}
