{
	/NoDataReadTest {
		/DLL {
			CoastLDAP
		}
		/Modules {
			MappersModule
			DataAccessImplsModule
			ActionsModule
		}
		/Actions {
		}
		/LDAPDAICachePolicyModule {
			/LDAPDAIDataAccess { NoDataDA }
			/LDAPDAIDataAccessAction	  { NoDataDAAction }
		}
	#!	DataAccessImpl definitions, edit when new backend needed
		/DataAccessImpls {
			/LDAPAbstractDAI {
				/LDAPSearchDAI {
					NoDataDA
					NoDataDAAction
				}
			}
		}
		/Mappers {
			/Input {
				/ParameterMapper {
					NoDataDA
					NoDataDAAction
				}
			}
			/Output {
				/ResultMapper {
					/LDAPListMapper {
						NoDataDA
						NoDataDAAction
					}
				}
			}
		}
	}
	/ReInitTest {
		/DLL {
			CoastLDAP
		}
		/Modules {
			MappersModule
			DataAccessImplsModule
			ActionsModule
			/LDAPDAICachePolicyModule {
				"LDAPDAICachePolicyModule"
				/Mandatory 1
			}
		}
		/Actions {
			/LDAPDAIDataAccessTestAction	{ TestDA1Action TestDA2Action }
		}

		/LDAPDAICachePolicyModule {
			/LDAPDAIDataAccess 			{ TestDA1 TestDA2 }
			/LDAPDAIDataAccessAction	{ TestDA1Action TestDA2Action }
		}
	#!	DataAccessImpl definitions, edit when new backend needed
		/DataAccessImpls {
			/LDAPAbstractDAI {
				/LDAPSearchDAI {
					TestDA1 TestDA2
					TestDA1Action TestDA2Action
				}
			}
		}
		/Mappers {
			/Input {
				/ParameterMapper {
					TestDA1 TestDA2
					TestDA1Action TestDA2Action
				}
			}
			/Output {
				/RootMapper {
					TestDA1 TestDA2
					TestDA1Action TestDA2Action
				}
			}
		}
	}
	/CallsInARow %ReInitTest
}
