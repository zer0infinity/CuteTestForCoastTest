#--- Modules ------------------------------------
	/Modules {
		AcceptorFactoriesModule
		SSLModule
	}
	/AcceptorFactories {
		/SSLAcceptorFactory {
			/TCP5010 { TCP5012 TCP5013 TCP5014 TCP5015 TCP5016 TCP5017 TCP5018 TCP5019 TCP5020 }
		}
		# Not a SSL acceptor factory!
		/AcceptorFactory {
			TCP5011
		}
	}

	/PoolTest {
		# Check peer's (server) cert, don't show cert to peer
		/Connector5010 {
			/Address !Defaults.any?HostName
			/Port 5010
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		# Check peer's (server) cert, show cert to peer
		/Connector5012 {
			/Address !Defaults.any?HostName
			/Port 5012
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		# Check peer's (server) cert, show cert to peer
		/Connector5013 {
			/Address !Defaults.any?HostName
			/Port 5013
			/SessionResumption 1
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		# Check peer's (server) cert, show cert to peer
		/Connector5014{
			/Address !Defaults.any?HostName
			/Port 5014
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		/Connector5015 {
			/Address !Defaults.any?HostName
			/Port 5015
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
		}
		/Connector5016 {
			/Address !Defaults.any?HostName
			/Port 5016
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
		}
		/Connector5017 {
			/Address !Defaults.any?HostName
			/Port 5017
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
		}
		/Connector5018 {
			/Address !Defaults.any?HostName
			/Port 5018
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		# Check peer's (server) cert, show cert to peer
		/Connector5019 {
			/Address !Defaults.any?HostName
			/Port 5019
			/KeyFileClient	!Defaults.any?KeyFileClientRelative
			/CertFileClient	!Defaults.any?CertFileClientRelative
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?FullChainCertRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
		/Connector5020 {
			/Address !Defaults.any?HostName
			/Port 5020
			/KeyFileClient	!Defaults.any?RootCAKeyFileRelative
			/CertFileClient	!Defaults.any?RootCACertFileRelative
			/SSLVerifyDepth 2
			/SSLPeerCAFile !Defaults.any?RootCACertFileRelative
			/SSLVerifyPeerCert 1
			/SSLVerifyFailIfNoPeerCert 1
		}
	}
