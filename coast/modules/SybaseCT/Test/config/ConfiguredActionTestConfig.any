{

	/DLL {
		applog
		dataaccess
		renderers
	}
	/Modules {
		ActionsModule
		RenderersModule
		SybaseModule
		DataAccessImplsModule
		MappersModule
		AppLogModule
		ServersModule
	}

	/Servers {}
	# uncomment the server slot for enabling TimeLogging
	/Server	Server

	/Actions {
		/CallDataAccessAction	{ CallDA }
	}
	/Renderers {
		/SwitchRenderer 		{ Switch }
		/ContextLookupRenderer 	{ Lookup }
	}
	/SybaseModule {
		/SybCTnewDAImpl {
			/ParallelQueries		1
			/CloseConnectionTimeout	60
			/InterfacesPathName		"config/interfaces.any"
		}
	}

	/DataAccessImpls {
		/SybCTnewDAImpl {
			/SybLocalSa {
				SybShowDatabases
				SybDeleteFromDatabase
			}
			/SybNewLocal {
				/SybSearchTest {
					SybNewDASearchTest
				}
				SybLimitedSearchTest
				SybLimitedSearchByParam
				SybLimitedSearchByParamOverride
				SybInsertDatabases
				SybErrorTest
				SybDeleteStoredProcedureTest
				SybCreateStoredProcedureTest
				SybExecuteStoredProcedureTest
				SybSingleRowForSingleSelects
				SybMultipleRowsForMultipleSelects

				/SybTestThreadnewDA {
					SybTestThreadnewDAWithError
				}
			}
		}
	}

	/Mappers {
		/Input {
			/ParameterMapper {
				/SybLocalSa {
					/SybShowDatabases {
					}
					/SybDeleteFromDatabase {
					}
				}
				/SybNewLocal {
					/SybSearchTest {
						SybNewDASearchTest
						SybLimitedSearchTest
						/SybLimitedSearchByParam {
							SybLimitedSearchByParamOverride
						}
						/SybInsertDatabases {
						}
						/SybErrorTest {
						}
						/SybDeleteStoredProcedureTest {
						}
						/SybCreateStoredProcedureTest {
						}
						/SybExecuteStoredProcedureTest {
						}
						/SybSingleRowForSingleSelects {
						}
						/SybMultipleRowsForMultipleSelects {
						}
					}
				}
			}
		}
		/Output {
			/ResultMapper {
				PutResultMapper
				/SybCTnewDAImpl {
					SybNewDASearchTest
					/SybSearchTest {
						SybTestThreadnewDA
						SybTestThreadnewDAWithError
						SybLimitedSearchTest
						SybLimitedSearchByParam
						SybLimitedSearchByParamOverride
						SybShowDatabases
						SybInsertDatabases
						SybDeleteFromDatabase
						SybErrorTest
						SybDeleteStoredProcedureTest
						SybCreateStoredProcedureTest
						SybExecuteStoredProcedureTest
						SybSingleRowForSingleSelects
						SybMultipleRowsForMultipleSelects
					}
				}
			}
		}
	}

######## Test specific section ########

