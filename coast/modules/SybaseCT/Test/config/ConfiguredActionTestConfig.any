		/SybSearchTest {
			/TheAction {
				/CallDA 	SybSearchTest
			}
			/Result {
				/TmpStore {
					/SybSearchTest {
						/Query	"select au_fname, au_lname from authors where au_lname='Bennet'"
						/QueryCount 1
						/QueryResult	{
							{
								/au_fname	"Abraham"
								/au_lname	"Bennet"
							}
						}
						/QuerySource	"HIKU_INT2"
					}
				}
			}
		}
