{

	/Config
	{
		/Modules
		{
			DataAccessImplsModule
			MappersModule
			AccessControllersModule
		}
		/AccessControllers
		{
			/Entity {
				/FileEDAC {	EntityDataFile }
			}
			/Token {
				/FileTDAC {	TokenDataFile }
			}
			/User {
				/FileUDAC {	UserDataFile }
			}
		}
		/DataAccessImpls
		{
			/DataAccessImpl
			{
				/ReadFileDAImpl {
					ReadEntityData
					ReadTokenData
					ReadUserData
				}
				/WriteFileDAImpl {
					WriteEntityData
					WriteTokenData
					WriteUserData
				}
			}
		}
		/Mappers {
			/Input {
				/ParameterMapper {
					ReadUserData
					ReadTokenData
					ReadEntityData
				}
			}
			/Output {
				/ResultMapper {
					ReadUserData
					ReadTokenData
					ReadEntityData
				}
			}
		}
	}

