{

#-- User data  ----------------------
	/SelectTest	{
		/SQL	{
			/RendererMapper {
				"SELECT * FROM TestTable"
			}
		}
	}
	/WrongPasswordTest %SelectTest
	/SelectTestWithoutQueryCount %SelectTest
	/WrongPortTest %SelectTest
	/WrongHostTest %SelectTest
	/InsertTest {
		/SQL	{
			/RendererMapper {
				"INSERT INTO TestTable "
				"VALUES ('Hallo',123)"
			}
		}
	}
	/DeleteTest {
		/Database {
			/RendererMapper {
				/ContextLookupRenderer {
					Database
				}
			}
		}
		/SQL	{
			/RendererMapper {
				"DELETE FROM TestTable "
				"WHERE Name='Hallo'"
			}
		}
	}
	/SQLErrorTest {
		/SQL	{
			/RendererMapper {
				"INSERT INTO TestTable "
				"VALUES (NULL,'Hallo')"
			}
		}
	}
}
