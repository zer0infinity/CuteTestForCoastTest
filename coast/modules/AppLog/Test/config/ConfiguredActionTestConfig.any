{

	/DLL {
	}
	/Modules {
		DataAccessImplsModule
		MappersModule
		ActionsModule
		RenderersModule
		ServersModule
		AppLogModule
	}

	/Server {
		TestServer
	}
	/Servers {
		/Server	{
		}
	}

	/Actions {
		/CallDataAccessAction { CallDA }
	}
	/Renderers {
		/ContextLookupRenderer	{ Lookup }
	}
	/DataAccessImpls {
		/MapperTestDAImpl {
			InToOutDA
		}
		/ReadFileDAImpl {
			ReadAccessLogIntoLoggedSlot
		}
	}
	/Mappers {
		/Input {
			/ParameterMapper {
				InToOutDA
				ReadAccessLogIntoLoggedSlot
			}
		}
		/Output {
			/ResultMapper {
				/LoggingMapper {
					InToOutDA
				}
				/RootMapper {
					ReadAccessLogIntoLoggedSlot
				}
			}
		}
	}

	/AppLogModule {
		/LogDir		"config"
		/Servers {
			/Server	{
				/AccessLog	{
					/FileName	"Access.log"
					/Format		%AccessLogFormat
				}
			}
		}
	}
	/AccessLogFormat {
		"Query [" { /Lookup Query } "]"
	}

######## Test specific section ########

	/RunOnly {
	}
	/TestCases {

	# ------ data access tests for refactored data access 16/03/04 --------

		# This test also covers the case of an unknown mapper name

		/LoggingMapperTest {
			# uses default mappers: ParameterMapper / ResultMapper
			/TmpStore {
				/In	XYZ
			}
			/TheAction {
				/ConditionalAction {
					/Call {
						/CallDA {
							/DataAccess	InToOutDA
						}
					}
					/True {
						/CallDA {
							/DataAccess	ReadAccessLogIntoLoggedSlot
						}
					}
				}
			}
			/ExpectedResult 1
			/Result {
				/TmpStore {
					/FileContent	"Query [XYZ]\n"
				}
			}
		}
	}
}
